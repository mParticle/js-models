{
    "extends": "gts/tslint.json",
    "rules": {
        "indent": {
            "options": ["spaces", 4]
        },
        "cyclomatic-complexity": [
            true,
            {
                "limit": 15
            }
        ],
        "interface-over-type-literal": false,
        "no-default-export": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-snake-case",
            "allow-leading-underscore"
        ]
    },
    "linterOptions": {
        "exclude": ["**/*.json", "tests/**/fixtures"]
    }
}
